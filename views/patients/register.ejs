<% layout('layouts/boilerplate') %>
    <form action="/patients/register" method="POST" class="m-5">
        <h3 class="display mb-4">Register</h3>
        <div class="form-row mb-3">
            <div class="form-group col-4">
                <label for="firstName">First Name <span style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[firstName]" type="text" class="form-control" id="firstName" placeholder="Jane" required>
            </div>
            <div class="form-group col-4">
                <label for="lastName">Last Name <span style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[lastName]" type="text" class="form-control" id="lastName" placeholder="Doe" required>
            </div>
            <div class="form-group col-4">
                <label for="username">Username <span style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[username]" type="text" class="form-control" id="username" placeholder="doe.jane" required>
            </div>
        </div>
        <div class="form-row mb-3">
            <div class="form-group col-6">
                <label for="signUpInputEmail">Email <span
                        style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[email]" type="email" class="form-control" id="signUpInputEmail"
                    placeholder="jane.doe@gmail.com" required>
            </div>
            <div class="form-group col-6">
                <label for="signUpInputPassword">Password <span
                        style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[password]" type="password" class="form-control" id="signUpInputPassword"
                    placeholder="********" required>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input name="patient[address]" type="text" class="form-control" id="inputAddress">
        </div>
        <div class="form-row mb-3">
            <div class="form-group col-4">
                <label for="inputCity">City <span style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[city]" type="text" class="form-control" id="inputCity" required>
            </div>
            <div class="form-group col-4">
                <label for="inputState">State <span style="color: rgb(158, 0, 0);">*</span></label>
                <select name="patient[state]" id="inputState" class="form-control" required>
                    <option>Delhi</option>
                    <option>Punjab</option>
                    <option>Haryana</option>
                    <option>Uttar Pradesh</option>
                </select>
            </div>
            <div class="form-group col-4">
                <label for="inputZip">Zip Code <span style="color: rgb(158, 0, 0);">*</span></label>
                <input name="patient[zipCode]" type="number" class="form-control" id="inputZip" required>
            </div>
        </div>
        <button type="submit" class="form-row btn btn-lg bg-teal">Sign up</button>
    </form>